---
layout: none
---
[
  {% assign public_posts = site.posts | where: 'public', true %}
  {% for post in public_posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "tags" : "{{ post.tags | join: ' > ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "updated"     : "{{ post.updated  | date: '%Y-%m-%d'}}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]